{
  "openapi": "3.0.3",
  "info": {
    "title": "Firebase Settings Schema",
    "version": "0.0.1",
    "description": "Firebase Firestore schema for RMS driver app settings and data."
  },
  "paths": {},
  "components": {
    "schemas": {
      "Settings": {
        "type": "object",
        "properties": {
          "hideCallerIdPrefix": {
            "type": "string",
            "nullable": true,
            "description": "Add a description if required",
            "example": "Add an example if required"
          },
          "daysToKeepPhotos": {
            "type": "integer",
            "nullable": false
          },
          "daysToKeepCompletedRecords": {
            "type": "integer",
            "nullable": false
          },
          "enableGps": {
            "type": "boolean",
            "nullable": false
          },
          "uploadMediaWifiOnly": {
            "type": "boolean",
            "nullable": false
          },
          "pin": {
            "type": "string",
            "nullable": false
          },
          "enableFuelEntries": {
            "$ref": "#/components/schemas/FuelEntryValues",
            "nullable": false
          }
        },
        "required": [
          "daysToKeepPhotos",
          "daysToKeepCompletedRecords",
          "enableFuelEntries",
          "enableGps",
          "pin",
          "uploadMediaWifiOnly"
        ]
      },
      "FuelEntryValues": {
        "type": "string",
        "enum": [
          "disabled",
          "enabled",
          "enabledForceImage"
        ]
      }
    }
  }
}
