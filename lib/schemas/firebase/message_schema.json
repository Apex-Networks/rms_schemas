{
  "openapi": "3.0.3",
  "info": {
    "title": "Message Schema",
    "version": "1.1.0",
    "description": "Schema for message data"
  },
  "paths": {},
  "components": {
    "schemas": {
      "IncomingMessage": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Backend ID linking replies"
          },
          "docId": {
            "type": "string",
            "description": "The unique document id for this message in Firebase Firestore"
          },
          "driverUid": {
            "type": "string"
          },
          "senderName": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "x-firestore-type": "timestamp"
          },
          "job": {
            "$ref": "#/components/schemas/Job",
            "nullable": true,
            "description": "Linked job"
          },
          "userMessageInteractions": {
            "$ref": "#/components/schemas/UserMessageInteractions",
            "nullable": true,
            "description": "User interactions with this message"
          }
        },
        "required": [
          "id",
          "docId",
          "driverUid",
          "senderName",
          "text",
          "createdAt"
        ]
      },
      "OutgoingMessage": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "job": {
            "$ref": "#/components/schemas/Job",
            "nullable": true,
            "description": "Linked job"
          }
        },
        "required": [
          "text"
        ]
      },
      "Job": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "docId": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "docId"
        ]
      },
      "ReadReceipt": {
        "type": "object",
        "properties": {
          "docId": {
            "type": "string",
            "description": "The unique document id for the message being marked as read in Firebase Firestore"
          }
        },
        "required": [
          "docId"
        ]
      },
      "UserMessageInteractions": {
        "type": "object",
        "description": "User interactions with this message",
        "properties": {
          "outgoingMessage": {
            "$ref": "#/components/schemas/OutgoingMessage",
            "nullable": true
          },
          "readReceipt": {
            "$ref": "#/components/schemas/ReadReceipt",
            "nullable": true
          },
          "isMarkedAsDeleted": {
            "type": "boolean",
            "nullable": true,
            "default": false,
            "description": "Indicates if the message has been marked as deleted by the user"
          }
        }
      }
    }
  }
}
