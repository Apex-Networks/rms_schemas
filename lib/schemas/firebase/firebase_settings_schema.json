{
  "openapi": "3.0.3",
  "info": {
    "title": "Firebase Settings Schema",
    "version": "0.0.2",
    "description": "Firebase Firestore schema for RMS driver app settings and data."
  },
  "paths": {},
  "components": {
    "schemas": {
      "Settings": {
        "type": "object",
        "properties": {
          "rmsSchemaVersion": {
            "type": "string",
            "nullable": false,
            "description": "The schema version of this repository",
            "example": "1.1.0"
          },
          "driverPin": {
            "type": "string",
            "nullable": false
          },
          "maskCallerIdPrefix": {
            "type": "string",
            "nullable": true
          },
          "mediaExpiryDays": {
            "type": "integer",
            "nullable": true,
            "description": "This is a local setting"
          },
          "completedRecordsExpiryDays": {
            "type": "integer",
            "nullable": false
          },
          "redeployedJobsNotified": {
            "type": "boolean",
            "nullable": false
          },
          "inventoryCheck": {
            "$ref": "#/components/schemas/InventoryCheck",
            "nullable": false
          },
          "jobRiskAssessmentRequired": {
            "type": "boolean",
            "nullable": false
          },
          "driverTimeChangesRestricted": {
            "type": "boolean",
            "nullable": false
          },
          "mileageAndOutcomeRequired": {
            "type": "boolean",
            "nullable": false
          },
          "conditionReportsRequired": {
            "type": "boolean",
            "nullable": false
          },
          "mediaUploadWifiOnly": {
            "type": "boolean",
            "nullable": false
          },
          "gpsEnabled": {
            "type": "boolean",
            "nullable": false
          },
          "useDeviceTimeForLocation": {
            "type": "boolean",
            "nullable": false
          },
          "fuelEntryMode": {
            "$ref": "#/components/schemas/FuelEntryMode",
            "nullable": false
          },
          "dailyVehicleCheckMode": {
            "$ref": "#/components/schemas/DailyVehicleCheckMode",
            "nullable": false
          }
        },
        "required": [
          "rmsSchemaVersion",
          "driverPin",
          "completedRecordsExpiryDays",
          "redeployedJobsNotified",
          "inventoryCheck",
          "jobRiskAssessmentRequired",
          "driverTimeChangesRestricted",
          "mileageAndOutcomeRequired",
          "conditionReportsRequired",
          "mediaUploadWifiOnly",
          "gpsEnabled",
          "useDeviceTimeForLocation",
          "fuelEntryMode",
          "dailyVehicleCheckMode"
        ]
      },
      "FuelEntryMode": {
        "type": "string",
        "enum": [
          "disabled",
          "enabled",
          "enabledForceImage"
        ]
      },
      "DailyVehicleCheckMode": {
        "type": "string",
        "enum": [
          "disabled",
          "enabled",
          "remind",
          "mandatory"
        ]
      },
      "InventoryCheck": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "nullable": false
          },
          "expiryDays": {
            "type": "integer",
            "nullable": false
          }
        },
        "required": [
          "enabled",
          "expiryDays"
        ]
      }
    }
  }
}