{
  "openapi": "3.0.3",
  "info": {
    "title": "Firebase Settings Schema",
    "version": "0.0.1",
    "description": "Firebase Firestore schema for RMS driver app settings and data."
  },
  "paths": {},
  "components": {
    "schemas": {
      "Settings": {
        "type": "object",
        "properties": {
          "pin": {
            "type": "string",
            "nullable": false
          },
          "maskCallerIdPrefix": {
            "type": "string",
            "nullable": true
          },
          "mediaExpiryDays": {
            "type": "integer",
            "nullable": false
          },
          "completedRecordsExpiryDays": {
            "type": "integer",
            "nullable": false
          },
          "mediaUploadWifiOnly": {
            "type": "boolean",
            "nullable": false
          },
          "enableGps": {
            "type": "boolean",
            "nullable": false
          },
          "fuelEntryMode": {
            "$ref": "#/components/schemas/FuelEntryMode",
            "nullable": false
          }
        },
        "required": [
          "pin",
          "mediaExpiryDays",
          "completedRecordsExpiryDays",
          "mediaUploadWifiOnly",
          "enableGps",
          "fuelEntryMode"
        ]
      },
      "FuelEntryMode": {
        "type": "string",
        "enum": [
          "disabled",
          "enabled",
          "enabledForceImage"
        ]
      }
    }
  }
}