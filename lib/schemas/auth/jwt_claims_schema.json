{
  "openapi": "3.0.3",
  "info": {
    "title": "JWT Claims",
    "version": "1.1.0",
    "description": "Use this schema when sending JWT Claims data from the backend to the app"
  },
  "paths": {},
  "components": {
    "schemas": {
      "JWTClaims": {
        "type": "object",
        "properties": {
          "driverId": {
            "type": "integer",
            "description": "Unique identifier for the driver",
            "example": 3
          },
          "driverUid": {
            "type": "string",
            "description": "Driver's unique identifier i.e. <installation-code>-<user-uid>",
            "example": "000001-3"
          },
          "driverName": {
            "type": "string",
            "description": "Driver's display name",
            "example": "Sandra Evans"
          },
          "installationCode": {
            "type": "string",
            "description": "Installation code for the driver's setup",
            "example": "000001"
          },
          "login": {
            "type": "string",
            "description": "Driver's login identifier",
            "example": "000001-sandra@test.com"
          },
          "driverAccessToken": {
            "type": "string",
            "description": "Access token for driver authentication",
            "example": "b5f9824e20c1cfe9846d24ef2623574efb4a0ba210aa43e2ff4ab9e5bd40f372"
          },
          "appVariant": {
            "type": "string",
            "description": "Application variant - rms, rmsLitePlus, rmsLite",
            "enum": ["rms", "rmsLitePlus", "rmsLite"]
          },
          "settingsEditable": {
            "type": "boolean",
            "description": "Indicates if settings are editable"
          },
          "user_id": {
            "type": "string",
            "description": "User ID from the JWT claims"
          }
        },
        "required": [
          "driverId",
          "driverUid",
          "driverName",
          "installationCode",
          "login",
          "driverAccessToken",
          "appVariant",
          "settingsEditable",
          "user_id"
        ]
      }
    }
  }
}
