{
  "openapi": "3.0.3",
  "info": {
    "title": "Firebase Settings Schema",
    "version": "0.0.2",
    "description": "Firebase Firestore schema for RMS driver app settings and data."
  },
  "paths": {},
  "components": {
    "schemas": {
      "Settings": {
        "type": "object",
        "properties": {
          "driverPin": {
            "type": "string",
            "nullable": false
          },
          "maskCallerIdPrefix": {
            "type": "string",
            "nullable": true
          },
          "mediaExpiryDays": {
            "type": "integer",
            "nullable": true,
            "description": "This is a local setting"
          },
          "completedRecordsExpiryDays": {
            "type": "integer",
            "nullable": false
          },
          "redeployedJobsNotified": {
            "type": "boolean",
            "nullable": false
          },
          "inventoryCheckRequired": {
            "type": "boolean",
            "nullable": false
          },
          "inventoryCheckExpiryDays": {
            "type": "integer",
            "nullable": false
          },
          "jobRiskAssessmentRequired": {
            "type": "boolean",
            "nullable": false
          },
          "driverTimeChangesRestricted": {
            "type": "boolean",
            "nullable": false
          },
          "mileageAndOutcomeRequired": {
            "type": "boolean",
            "nullable": false
          },
          "conditionReportsRequired": {
            "type": "boolean",
            "nullable": false
          },
          "mediaUploadWifiOnly": {
            "type": "boolean",
            "nullable": false
          },
          "gpsEnabled": {
            "type": "boolean",
            "nullable": false
          },
          "useDeviceTimeForLocation": {
            "type": "boolean",
            "nullable": false
          },
          "fuelEntryMode": {
            "$ref": "#/components/schemas/FuelEntryMode",
            "nullable": false
          },
          "dailyVehicleCheckMode": {
            "$ref": "#/components/schemas/DailyVehicleCheckMode",
            "nullable": false
          }
        },
        "required": [
          "driverPin",
          "completedRecordsExpiryDays",
          "redeployedJobsNotified",
          "inventoryCheckRequired",
          "inventoryCheckExpiryDays",
          "jobRiskAssessmentRequired",
          "driverTimeChangesRestricted",
          "mileageAndOutcomeRequired",
          "conditionReportsRequired",
          "mediaUploadWifiOnly",
          "gpsEnabled",
          "useDeviceTimeForLocation",
          "fuelEntryMode",
          "dailyVehicleCheckMode"
        ]
      },
      "FuelEntryMode": {
        "type": "string",
        "enum": [
          "disabled",
          "enabled",
          "enabledForceImage"
        ]
      },
      "DailyVehicleCheckMode": {
        "type": "string",
        "enum": [
          "disabled",
          "enabled",
          "remind",
          "mandatory"
        ]
      }
    }
  }
}