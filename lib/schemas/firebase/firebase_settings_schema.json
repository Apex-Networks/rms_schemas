{
  "openapi": "3.0.3",
  "info": {
    "title": "Firebase Settings Schema",
    "version": "0.0.4",
    "description": "Firebase Firestore schema for RMS driver app settings and data."
  },
  "paths": {},
  "components": {
    "schemas": {
      "Settings": {
        "type": "object",
        "properties": {
          "rmsSchemaVersion": {
            "type": "string",
            "nullable": false,
            "description": "The rms_schemas repository tag / version",
            "example": "x.y.z"
          },
          "maskCallerIdPrefix": {
            "type": "string",
            "nullable": true
          },
          "mediaExpiryDays": {
            "type": "integer",
            "nullable": true,
            "description": "Client-only field. Backend must not modify."
          },
          "completedRecordsExpiryDays": {
            "type": "integer",
            "nullable": false
          },
          "redeployedJobsNotified": {
            "type": "boolean",
            "nullable": false
          },
          "inventoryCheck": {
            "$ref": "#/components/schemas/InventoryCheck"
          },
          "jobRiskAssessmentRequired": {
            "type": "boolean",
            "nullable": false
          },
          "driverTimeChangesRestricted": {
            "type": "boolean",
            "nullable": false
          },
          "mileageAndOutcomeRequired": {
            "type": "boolean",
            "nullable": false
          },
          "conditionReportsRequired": {
            "type": "boolean",
            "nullable": false
          },
          "mediaUploadWifiOnly": {
            "type": "boolean",
            "nullable": false
          },
          "gpsEnabled": {
            "type": "boolean",
            "nullable": false
          },
          "fuelEntryMode": {
            "$ref": "#/components/schemas/FuelEntryMode"
          },
          "dailyVehicleCheckMode": {
            "$ref": "#/components/schemas/DailyVehicleCheckMode"
          }
        },
        "required": [
          "rmsSchemaVersion",
          "completedRecordsExpiryDays",
          "redeployedJobsNotified",
          "inventoryCheck",
          "jobRiskAssessmentRequired",
          "driverTimeChangesRestricted",
          "mileageAndOutcomeRequired",
          "conditionReportsRequired",
          "mediaUploadWifiOnly",
          "gpsEnabled",
          "fuelEntryMode",
          "dailyVehicleCheckMode"
        ]
      },
      "FuelEntryMode": {
        "type": "string",
        "enum": [
          "disabled",
          "enabled",
          "enabledForceImage"
        ]
      },
      "DailyVehicleCheckMode": {
        "type": "string",
        "enum": [
          "disabled",
          "enabled",
          "remind",
          "mandatory"
        ]
      },
      "InventoryCheck": {
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean",
            "nullable": false
          },
          "expiryDays": {
            "type": "integer",
            "nullable": false
          }
        },
        "required": [
          "enabled",
          "expiryDays"
        ]
      }
    }
  }
}
